<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_topViewPager"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_topAdd"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:src="@drawable/icon_add"
        app:layout_constraintEnd_toEndOf="@id/vp_topViewPager"
        app:layout_constraintTop_toTopOf="@id/vp_topViewPager" />

    <ImageView
        android:id="@+id/iv_likedCombo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="15dp"
        android:elevation="5dp"
        android:src="@drawable/icon_fav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_syncButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:elevation="2dp"
        android:src="@drawable/sync"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_bottomViewPager"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_bottomAdd"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:src="@drawable/icon_add"
        app:layout_constraintBottom_toBottomOf="@id/vp_bottomViewPager"
        app:layout_constraintEnd_toEndOf="@id/vp_bottomViewPager" />


</androidx.constraintlayout.widget.ConstraintLayout>